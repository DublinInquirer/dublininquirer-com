%h3 Areas
%ul
  - @areas.each do |area|
    %li= link_to area.name, area_projects_election_survey_path(id: @survey.slug, area_id: area.slug)

%h3 Parties
%ul
  - @parties.each do |party|
    %li= link_to party.name, party_projects_election_survey_path(id: @survey.slug, party_id: party.slug)

%h3 Candidates
%ul
  - @candidates.each do |candidate|
    %li
      = link_to candidate_projects_election_survey_path(id: @survey.slug, candidate_id: candidate.slug) do
        = image_tag "candidates/#{ candidate.slug }.jpg"
        = candidate.name

%h3 Questions
%ul
  - @questions.each do |question|
    %li= link_to question.body, question_projects_election_survey_path(id: @survey.slug, question_id: question.position)