.service
  .title-bar
    %h3= service['title']
    .organisation= service['organisation'].present? ? service['organisation'] : service['contact_name']
    
  = simple_format service['description']

  - address_lines = service.values_at('address_line_1', 'address_line_2', 'address_city', 'address_county', 'address_postcode').reject(&:blank?)

  - if address_lines.any?
    .address
      %label Address
      = simple_format address_lines.compact.join(', ')

  .areas
    %label Areas
    - service['areas'].each do |area|
      = link_to area, projects_neighbours_services_path(area: area.parameterize)
  .categories
    %label Categories
    - service['categories'].each do |category|
      = link_to category, projects_neighbours_services_path(category: category.parameterize)