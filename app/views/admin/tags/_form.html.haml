= form_for [:admin, tag], html: {class: 'admin-form', data: {"form-target": "form"}} do |f|
  - if tag.errors.any?
    %ul.errors
      - tag.errors.full_messages.each do |message|
        %li= message

  %fieldset
    .field
      = f.label :name
      = f.text_field :name

    .field.-tick
      = f.label :autolink do
        Autolink?
        = f.check_box :autolink

  .actions= f.submit 'Save', class: 'button'
