.container
  .row
    .col-xs-6
      %h2= link_to "Current issue", [:admin, @current_issue]
      - if @current_issue.try(:any?)
        %table.admin-table
          - @current_issue.each do |article|
            %tr
              %td= link_to article.title, [:admin, article]
      - else
        .empty
          :markdown
            Nothing ðŸ˜¬

    .col-xs-6
      %h2 Comments in moderation
      - if @unapproved_comments.any?
        %table.admin-table
          - @unapproved_comments.each do |comment|
            %tr
              %td
                = link_to [:admin, comment] do
                  Comment on #{ comment.article.title }
      - else
        .empty
          :markdown
            Nothing to moderate!
