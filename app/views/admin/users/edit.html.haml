- content_for :subheader_detail do
  %div
    .breadcrumbs
      = link_to 'Users', [:admin, :users]
      = link_to @user.email_address, [:admin, @user]
      = link_to 'Edit', [:edit, :admin, @user]

    %nav
      = link_to "Cancel without saving", [:admin, @user], class: 'button -cancel'
      = link_to "Save", [:admin, @user], class: 'button', data: {action: "form#submitForm"}

= render partial: 'admin/users/form', locals: {user: @user}