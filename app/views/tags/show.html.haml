- title @tag.name
- description "Dublin Inquirer articles related to #{ @tag.name } "

.wrapper.-contained{role: 'layout'}
  %header.header.-category
    %h1.heading
      Articles related to
      %code.-quote #{ @tag.name }
  .container
    .row
      - @articles.each do |article|
        .col-xs-12.col-md-6.col-lg-3.col.flex
          = render partial: 'articles/excerpts/result', locals: {article: article}
          %hr.-stroke

  = render partial: 'layouts/pagination', locals: {page: @page, collection: @articles, query_params: {}}