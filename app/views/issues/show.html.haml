- title @issue.issue_date.to_s
- description "Articles from Dublin Inquirer's #{ @issue.issue_date } issue"

.wrapper.-contained{role: 'layout'}
  %header.header.-category
    %h1.heading= @issue.issue_date.strftime('%-d %B %Y')
  .container
    - @articles.in_groups_of(4, false).each do |group|
      .row
        - group.each do |article|
          .col-xs-12.col-lg-3
            = render partial: 'articles/excerpts/result', locals: { article: article }
            %hr.-stroke.-not-lg
      %hr.-stroke.-only-lg.-not-if-last