- title @issue.issue_date.to_s
- description "Articles from Dublin Inquirer's #{ @issue.issue_date.strftime('%-d %B %Y') } issue"

%header.page-header
  %h1.heading From the #{ @issue.issue_date.strftime('%-d %B %Y') } issue

.block.-p2.-pb4
  .wrapper.-contained{role: 'layout'}
    - @articles.in_groups_of(4, false).each do |group|
      .row
        - group.each do |article|
          .col-xs-12.col-lg-3
            = render partial: 'articles/excerpts/result', locals: { article: article }
            %hr.-stroke.-not-lg