!!!
%html
  %head
    %meta{charset: "utf-8"}/
    %meta{'http-equiv': 'x-ua-compatible', content: 'ie=edge'}/
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{name: 'viewport', content: "width=device-width, initial-scale=1"}/

    = display_meta_tags site: 'Dublin Inquirer', og: { title: :title, site_name: :site }, twitter: { title: :title, site_name: :site }, reverse: true, separator: '|'

    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = render partial: 'layouts/snippets/fb'
    = render partial: 'layouts/snippets/stripe'

  %body
    .modal{role: 'layout'}
      =render partial: 'layouts/modal-nav'
      %main.modal-main
        .modal-content
          .wrapper.-container{role: 'layout'}
            .wrapper.-small{role: 'layout'}= yield

      - if content_for(:illustration)
        = yield :illustration
      - else
        %aside.modal-aside.illustration
          %header
            .logotype.-stacked Dublin InQuirer
            %p Reader supported.

    = render partial: 'layouts/snippets/analytics'
