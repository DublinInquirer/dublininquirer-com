!!!
%html
  %head
    %meta{charset: "utf-8"}/
    %meta{'http-equiv': 'x-ua-compatible', content: 'ie=edge'}/
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{name: 'viewport', content: "width=device-width, initial-scale=1"}/

    = display_meta_tags site: 'Dublin Inquirer', og: { title: :title, site_name: :site }, twitter: { title: :title, site_name: :site }, reverse: true, separator: '|'

    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all'
    <script src="https://js.stripe.com/v3/"></script>
    %script{type: "text/javascript"}
      var stripe = Stripe('#{ Rails.application.config.stripe[:publishable_key] }');
    = javascript_include_tag 'application'
    = render partial: 'layouts/snippets/fb'

  %body
    .modal{role: 'layout'}
      =render partial: 'layouts/modal-nav'
      %main.modal-main
        .frame{role: 'layout'}
          .modal-content
            = yield

        .block.-bt
          .frame{role: 'layout'}
            .block.-py4
              &nbsp;

      - if content_for(:illustration)
        = yield :illustration
      - else
        %aside.modal-aside.illustration
          %header
            .logotype.-stacked Dublin InQuirer
            %p Reader supported.

    = render partial: 'layouts/analytics'
